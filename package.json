{
    "name": "class-validator-extended",
    "version": "0.0.2-beta",
    "description": "Additional decorator and non-decorator based validation for class-validator.",
    "main": "dist/index.js",
    "directories": {
        "test": "test",
        "lib": "src"
    },
    "scripts": {
        "setup": "npm ci && npm install --no-save dayjs class-validator",
        "build": "rm -rf dist && tsc && npm run docs:generate",
        "test": "npm run lint && npm run jest && npm audit",
        "format": "prettier --write .",
        "jest": "jest",
        "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:prettier",
        "lint:tsc": "tsc --noEmit --project tsconfig.json && tsc --noEmit --project test/tsconfig.json",
        "lint:eslint": "eslint --max-warnings 0 --ext=ts .",
        "lint:prettier": "prettier --check .",
        "docs": "npm run docs:generate && npm run docs:publish",
        "docs:generate": "typedoc",
        "docs:publish": "gh-pages --dist docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pigulla/class-validator-extended.git"
    },
    "keywords": [
        "validator",
        "validation",
        "decorators",
        "typescript",
        "class-validator",
        "plugin"
    ],
    "author": {
        "name": "Raphael Pigulla",
        "email": "pigulla@four66.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pigulla/class-validator-extended/issues"
    },
    "homepage": "https://github.com/pigulla/class-validator-extended#readme",
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/validator": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.23.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unicorn": "^40.0.0",
        "gh-pages": "^3.2.3",
        "jest": "^27.4.7",
        "jest-date-mock": "^1.0.8",
        "jest-extended": "^1.2.0",
        "prettier": "^2.3.0",
        "ts-jest": "^27.0.1",
        "typedoc": "^0.22.10",
        "typescript": "^4.5.4"
    },
    "peerDependencies": {
        "class-validator": "*",
        "dayjs": "*"
    }
}
