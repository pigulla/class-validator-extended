{
    "extends": "../tsconfig.json",
    "include": ["../src/**/*.ts", "../test/**/*.ts"],
    "compilerOptions": {
        "rootDir": "..",
        "types": ["node"],
        "experimentalDecorators": true,
        "paths": {
            "~": ["src/index.ts"],
            "~/*": ["src/*"],
            "~test": ["test/index.ts"],
            "~test/*": ["test/*"]
        }
    }
}
